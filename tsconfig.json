{
  "compilerOptions": {
    "lib": ["dom", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true,
    "incremental": true
  }
}
